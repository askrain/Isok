<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jsptpd.miushuki.isok.MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/textView_section1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"/>
        <TextView
            android:id="@+id/textView_section2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"/>
        <TextView
            android:id="@+id/textView_section3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hava your choice for the three TEXTVIEW above"
        android:maxLines="1"
        android:typeface="serif"
        android:textStyle="bold|italic"
        />

    <Spinner
        android:id="@+id/spinner_A"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />

    <Spinner
        android:id="@+id/spinner_B"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Spinner
        android:id="@+id/spinner_C"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:onClick="launch"
        android:id="@+id/button_launch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:text="LAUNCH"
        android:gravity="center"
        android:typeface="serif"
        android:textStyle="bold|italic"/>

</LinearLayout>
